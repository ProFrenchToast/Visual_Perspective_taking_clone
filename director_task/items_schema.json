{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Items Schema",
  "description": "Schema for validating items.json files",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "description": "Unique name for the item"
      },
      "image_path": {
        "type": "string",
        "description": "Path to the item's image file"
      },
      "boolean_properties": {
        "type": "object",
        "additionalProperties": {
          "type": "boolean"
        }
      },
      "scalar_properties": {
        "type": "object",
        "additionalProperties": {
          "type": "number"
        }
      }
    },
    "required": ["name", "image_path", "boolean_properties", "scalar_properties"],
    "additionalProperties": false
  },
  "minItems": 1,
  "uniqueItems": false
}